generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expenses  Expense[]
}

enum ExpenseCategory {
  // Food & Beverage
  FOOD
  GROCERIES
  RESTAURANTS
  DRINKS
  ALCOHOL
  COFFEE
  TEA
  SNACKS
  
  // Transportation & Housing
  TRANSPORTATION
  HOUSING
  UTILITIES
  
  // Lifestyle & Entertainment
  ENTERTAINMENT
  SHOPPING
  SUBSCRIPTION
  GIFTS
  
  // Health & Education
  HEALTH
  EDUCATION
  TRAVEL
  
  // Other
  OTHER
}

model Expense {
  id          String         @id @default(uuid())
  amount      Float
  description String
  date        DateTime       @default(now())
  category    ExpenseCategory
  user        User           @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  receipt     String?        // URL to receipt image
}
